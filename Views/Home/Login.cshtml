@model Teacher

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group ">
        <label for="courseName">Teacher username:</label>
        <input type="text" id="username" name="username" class="form-control" />
    </div>
    <div class="form-group ">
        <label for="courseCode">Teacher password:</label>
        <input type="text" id="password" name="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Login</button>

</form>
<div>
<p> Hesabınız yoksa </p>
<a href="@Url.Action("Register", "Home")" class="btn btn-primary">Kayıt Ol</a>
</div>